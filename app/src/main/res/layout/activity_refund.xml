<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.RefundActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_refund"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_primary"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/color_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/back_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/refund_status"
            android:textColor="@color/white"
            android:textSize="15sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_margin="8dp"
        android:id="@+id/way_bill_details_MCV"
        app:cardElevation="3dp"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/way_bill_details_CL"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trip_name_headline_TV"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:text="@string/trip_name"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/trip_name_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/trip_name_headline_TV"
                android:layout_width="wrap_content"
                android:text="Dehradun ISBT to Delhi kashmiri gate via haridwar"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textFontWeight="700"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/start_time_headline_TV"
                app:layout_constraintTop_toBottomOf="@id/trip_name_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:text="Start time"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/start_time_date_TV"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/start_time_headline_TV"
                android:layout_width="wrap_content"
                android:text="14/12/2022"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textFontWeight="700"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/break_down_time_headline_TV"
                app:layout_constraintTop_toBottomOf="@id/trip_name_TV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:text="@string/breakdown_time"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/break_down_time_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/break_down_time_headline_TV"
                android:layout_width="wrap_content"
                android:text="12:00 Am"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textFontWeight="700"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/total_collection_headline_TV"
                app:layout_constraintTop_toBottomOf="@id/start_time_date_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="wrap_content"
                android:text="@string/total_collection"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/route_name_TV"
                app:layout_constraintTop_toBottomOf="@id/total_collection_headline_TV"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_width="0dp"
                android:text="RS 100"
                app:layout_constraintEnd_toEndOf="parent"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textFontWeight="700"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/total_refund_headline_TV"
                app:layout_constraintTop_toTopOf="@id/total_collection_headline_TV"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:text="Total refunded"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/total_refund_time_TV"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/total_refund_headline_TV"
                android:layout_width="wrap_content"
                android:text="Rs 600"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:textFontWeight="700"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/refund_list_RV"
        android:layout_margin="8dp"
        tools:listitem="@layout/refund_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>